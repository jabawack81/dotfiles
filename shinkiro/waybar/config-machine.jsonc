// Shinkiro (Desktop) specific modules
{
	"modules-right": [
		"custom/left-arrow-dark",
		"custom/media",
		"custom/left-arrow-light",
		"custom/left-arrow-dark",
		"custom/network-status",
		"custom/left-arrow-light",
		"custom/left-arrow-dark",
		"pulseaudio",
		"custom/left-arrow-light",
		"custom/left-arrow-dark",
		"memory",
		"custom/left-arrow-light",
		"custom/left-arrow-dark",
		"cpu",
		"custom/left-arrow-light",
		"custom/left-arrow-temp-cpu-before",
		"custom/temperature-cpu",
		"custom/left-arrow-temp-cpu-after",
		"custom/left-arrow-temp-gpu-before",
		"custom/temperature-gpu",
		"custom/left-arrow-temp-gpu-after",
		"custom/left-arrow-dark",
		"disk",
		"custom/left-arrow-light",
		"custom/left-arrow-dark",
		"disk#media",
		"custom/left-arrow-light",
		"custom/left-arrow-dark",
		"custom/power",
		"custom/left-arrow-light",
		"custom/left-arrow-bedtime-before",
		"custom/bedtime",
		"custom/left-arrow-bedtime-after",
		"custom/left-arrow-dark",
		"tray"
	],
	
	// Desktop-specific module definitions
	"custom/temperature-gpu": {
		"interval": 5,
		"return-type": "json",
		"exec": "bash ~/.config/waybar/temperature-gpu.sh",
		"format": "󰢮  {}",
		"tooltip": true
	},
	
	"disk#media": {
		"interval": 5,
		"format": "󰉓  {percentage_free:2}%",
		"path": "/mnt/media/"
	},
	
	// Time status module (work hours, lunch, bedtime)
	"custom/bedtime": {
		"interval": 30,
		"exec": "bash ~/.config/bedtime/time-status-waybar.sh",
		"return-type": "json",
		"format": "{}",
		"tooltip": true
	},
	
	// Bedtime-aware arrow modules
	"custom/left-arrow-bedtime-before": {
		"interval": 30,
		"exec": "bash ~/.config/waybar/arrow-bedtime-before.sh",
		"return-type": "json",
		"format": "{}",
		"tooltip": false
	},
	
	"custom/left-arrow-bedtime-after": {
		"interval": 30,
		"exec": "bash ~/.config/waybar/arrow-bedtime-after.sh",
		"return-type": "json",
		"format": "{}",
		"tooltip": false
	},
	
	// Temperature-aware arrow modules
	"custom/left-arrow-temp-cpu-before": {
		"interval": 5,
		"exec": "bash ~/.config/waybar_common/arrow-cpu-before.sh",
		"return-type": "json",
		"format": "{}",
		"tooltip": false
	},
	
	"custom/left-arrow-temp-cpu-after": {
		"interval": 5,
		"exec": "bash ~/.config/waybar_common/arrow-cpu-after.sh",
		"return-type": "json",
		"format": "{}",
		"tooltip": false
	},
	
	"custom/left-arrow-temp-gpu-before": {
		"interval": 5,
		"exec": "bash ~/.config/waybar/arrow-gpu-before.sh",
		"return-type": "json",
		"format": "{}",
		"tooltip": false
	},
	
	"custom/left-arrow-temp-gpu-after": {
		"interval": 5,
		"exec": "bash ~/.config/waybar/arrow-gpu-after.sh",
		"return-type": "json",
		"format": "{}",
		"tooltip": false
	}
}