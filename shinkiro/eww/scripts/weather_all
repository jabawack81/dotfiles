      else if ($1 == "227" || $1 == "230" || $1 == "320" || $1 == "323" || $1 == "326" || $1 == "329" || $1 == "332" || $1 == "335" || $1 == "338" || $1 == "350" || $1 == "368" || $1 == "371" || $1 == "374" || $1 == "377") print "â„"
      else print "?"
